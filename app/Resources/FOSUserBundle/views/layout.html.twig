<!DOCTYPE html>
<html>
    <head>
        <title>Admin</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        {% block stylesheets %}
        <!-- Bootstrap -->
        <link href="{{ asset('bundles/admin/bootstrap/css/bootstrap.min.css') }}" rel="stylesheet">
        <!-- styles -->
        <link href="{{ asset('bundles/admin/css/styles.css') }}" rel="stylesheet">
{% endblock %}
        <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
        <!--[if lt IE 9]>
          <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
          <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
        <![endif]-->
    </head>
    <body>
    
    
        <div class="header">
            <div class="container">
                <div class="row">
                    <div class="col-md-5">
                        <!-- Logo -->
                        <div class="logo">
                            <h1><a href="{{ path('homepage') }}"><i class="glyphicon glyphicon-home"></i></a></h1>
                        </div>
                    </div> 
                </div>
            </div>
        </div>
    {% block body %}
        <div class="page-content">
            <div class="row">
                <div class="col-md-2">
                    <div class="sidebar content-box" style="display: block;">
                        <ul class="nav">
                            <!-- Main menu -->
                            <li><a href="{{ path('homepage') }}"><i class="glyphicon glyphicon-home"></i> Inicio</a></li>
                            <li><a href="{{ path('fos_user_profile_show') }}"><i class="glyphicon glyphicon-user"></i> Perfil</a></li>
                            <li><a href="{{ path('fos_user_profile_edit') }}"><i class="glyphicon glyphicon-edit"></i> Editar Perfil</a></li>
                            <li><a href="{{ path('fos_user_change_password') }}"><i class="glyphicon glyphicon-lock"></i> Restarurar Contrase√±a</a></li>
                            <li><i class="glyphicon glyphicon-stats"></i> Opciones Admin</li>
                            <li><a href="stats.html"><i class="glyphicon glyphicon-list"></i> Usuarios</a></li>
                            <li><a href="tables.html"><i class="glyphicon glyphicon-plus"></i> Agregar Usuario</a></li>
                            <li>-</li>
                            <li><a href="{{ path('fos_user_security_logout') }}"><i class="glyphicon glyphicon-log-out"></i> Salir</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-10"> 
                    {% if app.request.hasPreviousSession %}
                        {% for type, messages in app.session.flashbag.all() %}
                            {% for message in messages %}
                                <div class="flash-{{ type }}">
                                    {{ message }}
                                </div>
                            {% endfor %}
                        {% endfor %}
                    {% endif %}
                    {% block fos_user_content %}{% endblock fos_user_content %}
                </div>
            </div>
        </div>
    {% endblock %}
    
    {% block footer %}
        <footer>
            <div class="container">
            <div class="copy text-center">
               Copyright 2014 <a href='#'>Website</a>
            </div>
            </div>
        </footer>
    {% endblock %}

    {% block javascripts %}
    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://code.jquery.com/jquery.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    {#
    {% javascripts
        '@AdminBundle/Resources/public/bootstrap/js/bootstrap.min.js'
        '@AdminBundle/Resources/public/js/custom.js' %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
    #}
    <script src="{{asset('bundles/admin/bootstrap/js/bootstrap.min.js')}}"></script>
    <script src="{{asset('bundles/admin/js/custom.js')}}"></script>

{% endblock %}
  </body>
</html>