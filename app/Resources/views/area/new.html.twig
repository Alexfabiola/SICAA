{% extends 'base.html.twig' %}

{% block body %}
    <div class="col-md-9 col-lg-9 col-xs-9 col-sm-9">
        <div class="content-box-large">
            <div class="panel-heading">
                <div class="panel-title"><h2>Creación del Área</h2></div>
                <a href="{{ path('area_index') }}"><button class="btn btn-default pull-right"><i class="glyphicon glyphicon-arrow-left"></i>  Volver a la lista</button></a>
            </div>
            {{ form_start(form) }}
                {{ form_errors(form) }}
                <div class="panel-body">
                    <div class="col-md-4 col-lg-4 col-xs-4 col-sm-4">
                        {{ form_row(form.nombre) }}
                        {{ form_row(form.descripcion) }}
                    </div>
                    <div class="col-md-4 col-lg-4 col-xs-4 col-sm-4">
                        {{ form_row(form.tipoArea) }}
                        {{ form_row(form.ubicacion) }}
                    </div>
                    {#{{ form_widget(form) }}#}
                    <div class="col-md-12 col-xs-12 col-lg-12 col-sm-12">
                        <button class="btn btn-primary pull-right" type="submit" ><i class='glyphicon glyphicon-save'></i>&nbsp;Guardar </button>
                        {{ form_end(form) }}
                    </div>
                </div>
        </div>
    </div>
{% endblock %}
