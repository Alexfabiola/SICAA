{% extends 'base.html.twig' %}

{% block body %}
    <div class="col-md-9 col-lg-9 col-xs-9 col-sm-9">
        <div class="content-box-large">
            <div class="panel-heading">
                <div class="panel-title"><h2>Lista de Áreas</h2></div>
                <a style="float: right;"href="{{ path('area_new') }}"><button class="btn btn-success">Agregar Área</button></a>

            </div>
            <div class="panel-body">
                <table id="areas" cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Num</th>
                            <th>Nombre </th>
                            <th>Descripción </th>
                            <th>Ubicación </th>
                            <th>Tipo de área </th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for area in areas %}
                            <tr class="odd gradeX">
                                <td><a href="{{ path('area_show', { 'id': area.id }) }}">{{ area.id }}</a></td>
                                <td>{{ area.nombre }}</td>
                                <td>{{ area.descripcion }}</td>
                                <td>{{ area.ubicacion }}</td>
                                <td>{{ area.tipoArea }}</td>
                                <td>
                                    <a href="{{ path('area_show', { 'id': area.id }) }}"><button class="btn btn-default"><i class="glyphicon glyphicon-eye-open"></i> Ver</button></a>
                                    <a href="{{ path('area_edit', { 'id': area.id }) }}"><button class="btn btn-primary"><i class="glyphicon glyphicon-pencil"></i> Editar</button></a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
